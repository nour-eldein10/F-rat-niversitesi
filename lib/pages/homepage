
import 'package:flutter/material.dart';
import 'package:font_awesome_flutter/font_awesome_flutter.dart';
import 'package:carousel_slider/carousel_slider.dart';

class HomePage extends StatefulWidget {
  const HomePage({Key? key}) : super(key: key);

  @override
  State<HomePage> createState() => _HomePageState();
}

class _HomePageState extends State<HomePage> {
  int currentIndex = 0;
  final CarouselController _carouselController = CarouselController();

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Row(
        children: [
          // Sidebar
          Container(
            width: 200,
            color: Colors.red,
            child: Column(
              children: [
                const SizedBox(height: 40),
                _buildProfileSection(),
                const SizedBox(height: 30),
                _buildSidebarItem(FontAwesomeIcons.home, 'Home', 1),
                _buildSidebarItem(Icons.info, 'About', 2),
                _buildSidebarItem(Icons.person, 'Profile', 3),
                _buildSidebarItem(Icons.settings, 'Settings', 4),
                const Divider(color: Colors.white54),
                _buildSidebarItem(Icons.restaurant, 'Dining', 5),
                _buildSidebarItem(Icons.notifications, 'Announcements', 6),
                _buildSidebarItem(FontAwesomeIcons.newspaper, 'News', 7),
                _buildSidebarItem(Icons.event, 'Events', 8),
                const Spacer(),
                Row(
                  mainAxisAlignment: MainAxisAlignment.center,
                  children: [
                    IconButton(icon: const FaIcon(FontAwesomeIcons.twitter), 
                    IconButton(icon: const FaIcon(FontAwesomeIcons.linkedin)),
                    IconButton(icon: const Icon(Icons.facebook)),
                    IconButton(icon: const FaIcon(FontAwesomeIcons.youtube)),
                  ],
                ),
              ],
            ),
          ),
          
          // Main Content
          Expanded(
            child: SingleChildScrollView(
              child: Column(
                children: [
                  _buildHeader(),
                  _buildGridMenu(),
                  _buildAnnouncementsSection(),
                  _buildEventsSection(),
                ],
              ),
            ),
          ),
        ],
      ),
    );
  }

  Widget _buildProfileSection() {
    return Column(
      children: [
        Container(
          width: 135,
          height: 135,
          decoration: const BoxDecoration(
            color: Colors.redAccent,
            shape: BoxShape.circle,
          ),
          // Profile image would go here
        ),
        const SizedBox(height: 10),
        const Text('Nour Eldein\nSoftware Engineering', 
          textAlign: TextAlign.center,
          style: TextStyle(color: Colors.white, fontWeight: FontWeight.w600),
        ),
      ],
    );
  }

  Widget _buildSidebarItem(IconData icon, String title, int index) {
    return ListTile(
      leading: Icon(icon, color: Colors.white),
      title: Text(title, style: const TextStyle(color: Colors.white)),
      onTap: () => setState(() => currentIndex = index),
    );
  }

  Widget _buildHeader() {
    return Padding(
      padding: const EdgeInsets.all(16),
      child: Row(
        children: [
          const Icon(Icons.menu, color: Colors.red),
          const SizedBox(width: 16),
          Text('Firat University', 
            style: TextStyle(color: Colors.red, fontSize: 25, fontWeight: FontWeight.bold)),
        ],
      ),
    );
  }

  Widget _buildGridMenu() {
    return GridView.count(
      shrinkWrap: true,
      crossAxisCount: 3,
      children: [
        _buildGridItem(Icons.restaurant, 'Dining'),
        _buildGridItem(FontAwesomeIcons.wallet, 'Balance'),
        _buildGridItem(Icons.schedule, 'Schedule'),
        _buildGridItem(Icons.calendar_today, 'Calendar'),
        _buildGridItem(Icons.people, 'Faculty'),
        _buildGridItem(Icons.contact_mail, 'Contact'),
      ],
    );
  }

  Widget _buildGridItem(IconData icon, String title) {
    return Card(
      child: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          CircleAvatar(
            backgroundColor: Colors.white,
            child: Icon(icon, color: Colors.red),
          ),
          const SizedBox(height: 8),
          Text(title),
        ],
      ),
    );
  }

  Widget _buildAnnouncementsSection() {
    return Column(
      children: [
        _buildSectionTitle('ANNOUNCEMENTS'),
        CarouselSlider(
          items: [1, 2, 3].map((i) => _buildAnnouncementCard()).toList(),
          options: CarouselOptions(viewportFraction: 0.65),
        ),
      ],
    );
  }

  Widget _buildEventsSection() {
    return Column(
      children: [
        _buildSectionTitle('EVENTS'),
        CarouselSlider(
          items: [1, 2, 3].map((i) => _buildEventCard()).toList(),
          options: CarouselOptions(viewportFraction: 0.65),
        ),
      ],
    );
  }

  Widget _buildSectionTitle(String title) {
    return Padding(
      padding: const EdgeInsets.symmetric(horizontal: 16, vertical: 8),
      child: Row(
        mainAxisAlignment: MainAxisAlignment.spaceBetween,
        children: [
          Text(title, style: const TextStyle(color: Colors.grey, fontSize: 22)),
          const Text('View All', style: TextStyle(color: Colors.grey)),
        ],
      ),
    );
  }

  Widget _buildAnnouncementCard() {
    return Card(
      child: Stack(
        children: [
          Image.asset('assets/images/announcement.jpg'),
          Positioned(
            bottom: 0,
            child: Container(
              color: Colors.black54,
              width: 300,
              padding: const EdgeInsets.all(8),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  const Text('Announcement Title', style: TextStyle(color: Colors.white)),
                  const SizedBox(height: 8),
                  Row(
                    mainAxisAlignment: MainAxisAlignment.spaceBetween,
                    children: [
                      const Text('Date', style: TextStyle(color: Colors.white)),
                      IconButton(
                        icon: const Icon(Icons.arrow_forward, color: Colors.white),
                        onPressed: () {},
                      ),
                    ],
                  ),
                ],
              ),
            ),
          ),
        ],
      ),
    );
  }

  Widget _buildEventCard() {
    return Card(
      child: Stack(
        children: [
          Image.asset('assets/images/event.jpg'),
          Positioned(
            right: 8,
            top: 8,
            child: Container(
              width: 75,
              height: 75,
              decoration: const BoxDecoration(
                color: Colors.red,
                shape: BoxShape.circle,
              ),
              child: const Center(child: Text('23\nNOV', style: TextStyle(color: Colors.white))),
            ),
          ),
        ],
      ),
    );
  }
}
